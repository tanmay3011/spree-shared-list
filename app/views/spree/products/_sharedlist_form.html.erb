<% if spree_current_user %>
  <div id="sharedlist-form">
    <%= form_for Spree::SharedProduct.new do |f| %>
      <%= f.hidden_field :variant_id, value: @product.master.id %>
      <%= f.hidden_field :quantity %>
      <%= f.select :sharedlist_id, spree_current_user.sharedlists.map { |l| [l.name, l.id] }, include_blank: true %>
      <button type="submit" class="btn btn-info">
        <%= Spree.t(:add_to_sharedlist) %>
      </button>
    <% end %>
  </div>
<% end %>
